.view-contaner {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid#ededed;
  padding-bottom: 5px;
}

.user-container {
  margin: 10rpx 0 10rpx 10rpx;
}

.user-photo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  vertical-align: middle;
}

.user-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
  color: rgba(15, 2, 2, 0.705);
}

.post-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin: 10px 0 10px 10px;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-container {
  flex-direction: row;
}

.post-chat {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.post-chat-number {
  font-size: 20rpx;
  color: #666;
  vertical-align: middle;
  margin-left: 5px;
}
