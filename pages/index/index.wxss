/**index.wxss**/

.view_display{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user_avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 120rpx;
  border-radius: 100rpx;
}

.name_display{
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.webcome_display{
  font-size: 20rpx;
  line-height: 60rpx;/*文本垂直居中*/
  color: #405f80;
}

.webcome_container{
  border: 1px solid #405f80;
  width: 200rpx;
  height: 60rpx;
  border-radius: 5px;
  text-align: center;/*文本水平居中*/
  margin-top: 200rpx;
}
/*默认最外层的容器*/
page{
  background-color: #bbd2ebd3;
  width: 100%;
  height: 100%;
}
